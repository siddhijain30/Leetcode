class Solution {
public:
    bool uniqueOccurrences(vector<int>& arr) {
        int freq[2001] = {0};  // covers -1000 to 1000

        for (int x : arr) {
            freq[x + 1000]++;  // safe only if -1000 <= x <= 1000
        }

        // check uniqueness
        for (int i = 0; i < 2001; i++) {
            if (freq[i] > 0) {
                for (int j = i + 1; j < 2001; j++) {
                    if (freq[j] > 0 && freq[i] == freq[j]) {
                        return false;
                    }
                }
            }
        }
        return true;
    }
};
