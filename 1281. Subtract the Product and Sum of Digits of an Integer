class Solution {
public:
    int subtractProductAndSum(int n) {
        int sum =0;
        int product=1;
        int output,digit;
        while(n>0){
            digit = n%10;
            n = n/10;
            sum = sum + digit;
            product = product * digit;
        }
            output = product - sum;
    return output;
    }

};
